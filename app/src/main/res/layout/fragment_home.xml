<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linlayout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/header_latest_releases_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/title_latest_releases_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ultime uscite"
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="@font/roboto_bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button_latest_releases_view_all_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedi tutto"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_latest_releases_linlayout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/first_latest_release_home"
                    android:layout_width="110dp"
                    android:layout_height="165dp"
                    app:shapeAppearanceOverlay="@style/Theme.Filmaccio.SquareCornerRadius"
                    app:strokeColor="?colorOnSurface"
                    app:strokeWidth="1.5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/second_latest_release_home"
                    android:layout_width="110dp"
                    android:layout_height="165dp"
                    app:shapeAppearanceOverlay="@style/Theme.Filmaccio.SquareCornerRadius"
                    app:strokeColor="?colorOnSurface"
                    app:strokeWidth="1.5dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/third_latest_release_home"
                    android:layout_width="110dp"
                    android:layout_height="165dp"
                    app:shapeAppearanceOverlay="@style/Theme.Filmaccio.SquareCornerRadius"
                    app:strokeColor="?colorOnSurface"
                    app:strokeWidth="1.5dp"/>

            </LinearLayout>

            <View
                android:id="@+id/divider1_home"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:id="@+id/header_feed_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/title_feed_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed"
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="@font/roboto_bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button_feed_view_all_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedi tutto"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_feeds_linlayout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>

            <View
                android:id="@+id/divider2_home"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:id="@+id/header_episodes_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/title_episodes_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodi"
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="@font/roboto_bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button_episodes_view_all_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedi tutto"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_episodes_linlayout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>